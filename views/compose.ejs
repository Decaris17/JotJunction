        <label for="title">Title</label>
        <input class="form-control" type="text" name="newTitle" id="title">
    </div>

    <div class="form-group">
        <label for="postBlog">Post</label>
        <textarea class="form-control" name="newBlog" id="postBlog" cols="30" rows="10" placeholder="word up son"></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Publish</button>
</form>


